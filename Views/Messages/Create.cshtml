@model Social.ViewModels.CreateViewModel

@{
    ViewData["Title"] = "Create Message";
}

<h1>Create</h1>

<h4>Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Send To<b>*</b></label>
                <div class="col-md-10">
                    @Html.DropDownList("Email")
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Title<b>*</b></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Message</label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p><b>* = Required</b></p>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (TempData["messages"] != null)
{<div>@TempData["messages"]</div>
<br />
}

<div>
    <a asp-action="Index">Back to Inbox</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
